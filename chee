    <button onclick="sendWhatsApp()">Send Order via WhatsApp</button>

    <script>
        function sendWhatsApp() {
            const phone = "250XXXXXXXXX"; // REPLACE WITH YOUR PHONE NUMBER
            let message = "New Order from Table " + document.getElementById('table').value + ":\n";
            const items = document.querySelectorAll('.order-item');
            
            items.forEach(item => {
                if(item.value > 0) {
                    message += `- ${item.value}x ${item.getAttribute('data-name')}\n`;
                }
            });

            const url = "https://wa.me/" + phone + "?text=" + encodeURIComponent(message);
            window.open(url, '_blank');
        }
    </script>
